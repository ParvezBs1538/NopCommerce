@using Nop.Plugin.Widgets.Parvez.Domain
@model IList<Employee>

@section left
{
    @await Component.InvokeAsync("CustomerNavigation", new { selectedTabId = -1 })
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        h2 {
            color: #333;
        }

        .table-container {
            margin-top: 20px;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
        }

            .table th, .table td {
                border: 2px solid #ddd;
                padding: 8px;
                text-align: left;
            }

            .table th {
                background-color: #f2f2f2;
            }

            .table tbody tr:hover {
                background-color: #f5f5f5;
            }

        .actions {
            text-align: center;
        }

            .actions button {
                margin: 0 5px;
                padding: 5px 10px;
                border: none;
                background-color: #007bff;
                color: white;
                cursor: pointer;
            }

                .actions button:hover {
                    background-color: #0056b3;
                }
    </style>
</head>
<body>
    <h2>Hello world</h2>
    <div class="table-container">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Employee Name</th>
                        <th>Is MVP</th>
                        <th>Is Certified</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var it in Model)
                    {
                        <tr>
                            <th>@it.Name</th>
                            <th>@it.IsMVP</th>
                            <th>@it.IsCertified</th>
                            <th>@it.StatusId</th>
                            <th>
                                <a asp-controller="EmployeePublic" asp-action="Edit" asp-route-id="@it.Id" class="btn btn-primary btn-sm">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="EmployeePublic" asp-action="Delete" asp-route-id="@it.Id" class="btn btn-outline-warning btn-sm">
                                    <i class="bi bi-trash3"></i> Delete
                                </a>
                            </th>
                            @* <th>
                                <a asp-controller="EmployeePublic" asp-action="Delete" asp-route-id="@it.Id" class="btn btn-outline-warning btn-sm">
                                        <i class="bi bi-trash3"></i> Delete
                                </a>
                            </th> *@
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
